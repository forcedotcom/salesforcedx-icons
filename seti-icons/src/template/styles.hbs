@font-face {
	font-family: "{{ name }}";
	font-display: block;
	src: {{{ fontSrc }}};
}

.seti-icon[class*='seti-icon-'] {
	font: normal normal normal 16px/1 {{ name }};
	display: inline-block;
	text-decoration: none;
	text-rendering: auto;
	text-align: center;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
}

/*---------------------
 *  Modifiers
 *-------------------*/

@keyframes seti-icon-spin {
	100% {
		transform:rotate(360deg);
	}
}

.seti-icon-sync.seti-icon-modifier-spin,
.seti-icon-loading.seti-icon-modifier-spin,
.seti-icon-gear.seti-icon-modifier-spin {
	/* Use steps to throttle FPS to reduce CPU usage */
	animation: seti-icon-spin 1.5s steps(30) infinite;
}

.seti-icon-modifier-disabled {
	opacity: 0.5;
}

.seti-icon-modifier-hidden {
	opacity: 0;
}

/* custom speed & easing for loading icon */
.seti-icon-loading {
	animation-duration: 1s !important;
	animation-timing-function: cubic-bezier(0.53, 0.21, 0.29, 0.67) !important;
}

/*---------------------
 *  Icons
 *-------------------*/

{{# each codepoints.hex }}
.{{ ../prefix }}-{{ @key }}:before { content: "\\{{ codepoint this }}" }
{{/ each }}

/*---------------------
 *  Colors
 *-------------------*/

:root {
	--seti-white: #d4d7d6;
	--seti-red: #cc3e44;
	--seti-blue: #519aba;
	--seti-green: #8dc149;
	--seti-purple: #a074c4;
	--seti-yellow: #cbcb41;
	--seti-grey-light: #6d8086;
	--seti-pink: #f55385;
	--seti-orange: #e37933;
	--seti-ignore: #41535b;
	--seti-grey: #4d5a5e;
}

{{# each codepoints.color }}
.{{ ../prefix }}-ext-{{ @key }}:before { color: var({{ codepoint this }}) }
{{/ each }}